<%= render "layouts/header" %>
<style>
table, th, td {
  border: 1px dotted black;
  border-collapse: collapse;
}
th, td {
  padding: 5px;
  text-align: left;    
}
</style>

<div class="content">

<h2> Users in Database </h2>
<p></p>
<table style="width:100%">
  <tr>
    <th>ID</th>
    <th>Email Address</th>
    <th>Account Status</th>
    <th></th>
  </tr>
<% @users.each do |users| %>
  
   <tr>
     <td><%= users.id %></td>
     <td><%= users.email %></td>
     <td><%= users.account_status %></td>
     <% if users.account_status == "active" %>
      <td><%= link_to "Deactivate", 
                      :controller => "admins", 
                      :action => "user_activate", 
                      :id => users.id %>
    <% else %>
     <td><%= link_to "Activate", 
                      :controller => "admins", 
                      :action => "user_activate", 
                      :id => users.id %>
    <% end %>               
     </td>  
  </tr>
   
   <% end %>
</table>
</div>
<%= render "layouts/footer" %>